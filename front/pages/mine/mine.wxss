/**更改开始**/

.user_img_wrap .user_info .user_icon{ 
  width: 130rpx;
  border-radius: 50%;
  margin: 0;
}

.user_img_wrap .user_info .info_detail{
  display:flex;
  flex-direction: column;
  width: 120px;
  height: 80px;
  margin: 10px;
}

.user_img_wrap .user_info .info_detail .nickname{
  height: 35px;
  font-size: 18px;
  font-weight: 600;
  width: 120px;
  line-height: 35px;
  display:-webkit-box;
  overflow:hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient:vertical;
}

.user_img_wrap .user_info .info_detail .detail{
  width: 150px;
  height: 35px;
  margin: 5px;
  font-size: 12px;
  font-weight: 400;
  display:-webkit-box;
  overflow:hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient:vertical;
}

.user_img_wrap .user_info navigator{
  display: block;
}

.user_img_wrap .user_info  navigator image{
  width: 30px;
  margin: 10px;
} 

