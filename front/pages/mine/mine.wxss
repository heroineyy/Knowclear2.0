/*信息栏*/
.message{
  border-bottom: 2.5px solid #f3f3f3; 
  display:flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  align-content: space-between;
  align-items:stretch;
} 


.message .firstline{
  display:flex;
  justify-content: space-between;
  height: 25px;
}

.message .firstline .topic{
  width: 50%;
  height: 25px;
}


.message .firstline .sendtime{
  font-size: 12px;
  color: #c5c5c5;
  font-weight: 600;
  width: 70px;
  height: 22px;
  padding-left:10px ;
  text-align: left;
}




.message .text text{
  display: -webkit-box;
  overflow: hidden;
  /* padding-left: 20rpx; */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  font-weight: 540;
  color: #1b1b1b;
  height: 40px;
  line-height: 40px;
}


