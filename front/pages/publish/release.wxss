/* pages/release/release.wxss */

/* 设置页面背景色 */
page{
    background-color: #F6F6F6;
}

/* 选择小屋按钮位置 */
.houseBtn{
    margin-top: 80rpx;
    margin-left: 280rpx;
    margin-right: 280rpx;
}
.style{
    color:#564F5F;font-size: 35rpx;font-weight: bold;
    margin-bottom: 10rpx;
}

/* 小屋选择按钮大小 */
.chooseAhouse{
    background-color: #564F5F;
    white-space: nowrap;
    /* 字体样式 */
    color: #ffffff;
    font-size: 35rpx;
    font-weight: bold;

    /* 按钮大小 */
    padding: 30rpx;
    border-radius: 60rpx;
}

/* 输入文本框 */
.inputHouse{
    /* 边框 */
    margin-top: -40rpx;
    background-color: #ffffff;
    border-radius: 30rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 40rpx;
    padding-bottom: 50rpx;
    /* height:380rpx; */
    /* 字体样式 */
    color: #000000;
    font-size: 35rpx;
    font-weight: bold;

    display: flex;
    flex-direction: column;
}

.inputText{
    margin-bottom: 10rpx;
}

/* 公开匿名两个 */
.access{
    display: flex;
    flex-direction: row; 
    align-items: center;

    /* 控制选项与边框的上下边距 */
    margin-top: 50rpx;
    margin-bottom: 10rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;


}

/* 公开匿名选项内部 */
.open{
    display: flex;
    justify-content: space-between;
    align-items: center;

    border-radius: 20rpx;

    /* 控制选项内部的边距 */
    padding-left: 85rpx;
    padding-right: 85rpx;

    margin: 10rpx;
    
}

/* 字体 */
.name{
    font-size: 35rpx;
    font-weight: bold;

    margin-top: -10rpx;
    margin-right: 60rpx;
    margin-left: -60rpx;
}

/* 图片 */
.imagePicture{
    margin-right: -60rpx;
    margin-left: +60rpx;
}

.release{
    margin-top: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom:30rpx;

    background-color: #33BB8B;
    border-radius: 20rpx;

    /* 字体 */
    color: #ffffff;
    font-size: 35rpx;
    font-weight: bold;

}



/* 上传图片 */

.content{
    display: flex;
    padding: 0 20rpx;
}
.upload{
    margin-top: 20rpx;
    width: 100%;
    /* height: 200rpx; */
    display: flex;
    flex-wrap: wrap;
}
.imgArr{
    display: flex;
    position: relative;
}
.imgArr:nth-child(3n+2){
    margin-bottom: 15rpx;
}
.imgArr .upImage{
    margin-right:15rpx;
}
.upImage{

    width: 200rpx;
    height: 200rpx;
}

.delete{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: -5rpx;
    right: -5rpx;
}
.anonymous-box{
    display: flex;
    flex-direction:row;
    justify-content: space-between;

    margin-top:30rpx;
}
.anonymous-txt{
    display: flex;
    flex-direction:row;
    justify-content: space-between;
    align-items: center;

    margin-top: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-bottom: 30rpx;

    padding : 10rpx;

    border-radius: 20rpx;
    font-size:35rpx;
    width:375rpx;
    background-color: #ffffff; 
    font-weight:bold;
}
.selected{
    background-color: #6d65cc;
    color: rgba(255, 255, 255, 1);
    border:1px solid #6d65cc;
  }
