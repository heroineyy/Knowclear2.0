.top{
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  height: calc(100vw*(375/750));
  overflow: hidden;
}
.top-background{
  position: absolute;
  filter: blur(10rpx);
  width:100%;
  height:300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.content{
  position: absolute;
  text-align: center;
  z-index: 1;
  width: 700rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  background-color:rgb(180,70,70,0.5);
}
.content-top{
  margin: 20rpx;
  display: flex;
  flex-direction: row;
}
.centent-top-left-img{
  width:120rpx;
  height: 120rpx;
}
.content-top-right{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  text-align: left;
}
.content-tag{
  margin-bottom: 20rpx;
  font-size: 36rpx;
  color: #fff;
}
.content-tag-text{
  color: #fff;
}
.hasAttention{
  width: 800rpx;
